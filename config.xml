        <icon platform="ios" src="res/icon/ios/196.png" height="196" width="196" />
        <icon platform="ios" src="res/icon/ios/216.png" height="216" width="216" />
        <icon platform="ios" src="res/icon/ios/1024.png" height="1024" width="1024" />
    </platform>
    <allow-navigation href="https://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="ethereum:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <access origin="https://tripseasonmap.com" />
    <access origin="wss://tripseasonmap.com" />
</widget>
