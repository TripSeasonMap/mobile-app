        <icon platform="ios" src="res/icon/ios/60.png" height="60" width="60" />
        <icon platform="ios" src="res/icon/ios/72.png" height="72" width="72" />
        <icon platform="ios" src="res/icon/ios/76.png" height="76" width="76" />
        <icon platform="ios" src="res/icon/ios/80.png" height="80" width="80" />
