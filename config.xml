<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tripseasonmap" version="0.9.58" xmlns:android="http://schemas.android.com/apk/res/android" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
	<name>Trip Season Map</name>
	<description>Trip Season Map shows you the best season to travel! And make plan your next adventure just that little bit easier.</description>
	<author email="go@tripseasonmap.com" href="https://tripseasonmap.com">Epexa</author>
	<content src="index.html" />
	<preference name="phonegap-version" value="cli-9.0.0" />
	<preference name="BackgroundColor" value="0xffffffff" />
	<preference name="DisallowOverscroll" value="true" />
	<preference name="StatusBarBackgroundColor" value="#fff" />
	<preference name="StatusBarStyle" value="lightcontent" />
	<plugin name="cordova-plugin-inappbrowser" spec="3.2.0" />
	<plugin name="cordova-plugin-statusbar" spec="2.4.3" />
	<plugin name="cordova-plugin-whitelist" spec="1.3.4" />
	<plugin name="yandex-appmetrica-plugin-cordova" spec="1.0.0" />
	<platform name="android">
		<preference name="android-targetSdkVersion" value="28" />
		<icon density="mdpi" src="res/icon/android/mipmap-hdpi.png" />
		<icon density="hdpi" src="res/icon/android/mipmap-mdpi.png" />
		<icon density="xhdpi" src="res/icon/android/mipmap-xhdpi.png" />
		<icon density="xxhdpi" src="res/icon/android/mipmap-xxhdpi.png" />
		<icon density="xxxhdpi" src="res/icon/android/mipmap-xxxhdpi.png" />
		<allow-intent href="market:*" />
		<allow-intent href="bitcoin:*" />
		<allow-intent href="ethereum:*" />
		<edit-config file="AndroidManifest.xml" target="/manifest/application/activity[@android:label='@string/activity_name']" mode="merge">
			<activity android:theme="@android:style/Theme.Material.Light.NoActionBar"></activity>
		</edit-config>
		<allow-navigation href="https://coinswitch.co/*" />
		<allow-navigation href="https://www.patreon.com/*" />
		<allow-navigation href="https://www.whydonate.nl/*" />
		<allow-navigation href="https://yasobe.ru/*" />
	</platform>
	<platform name="ios">
		<icon platform="ios" src="res/icon/ios/ipad_notification20x20.png" height="20" width="20" />
		<icon platform="ios" src="res/icon/ios/ipad_settings29x29.png" height="29" width="29" />
		<icon platform="ios" src="res/icon/ios/iphone_notification20x20@2x.png" height="40" width="40" />
		<icon platform="ios" src="res/icon/ios/iphone_settings29x29@2x.png" height="58" width="58" />
		<icon platform="ios" src="res/icon/ios/iphone_notification20x20@3x.png" height="60" width="60" />
		<icon platform="ios" src="res/icon/ios/ipad_app76x76.png" height="76" width="76" />
		<icon platform="ios" src="res/icon/ios/iphone_spotlight40x40@2x.png" height="80" width="80" />
		<icon platform="ios" src="res/icon/ios/iphone_settings29x29@3x.png" height="87" width="87" />
		<icon platform="ios" src="res/icon/ios/iphone_app60x60@2x.png" height="120" width="120" />
		<icon platform="ios" src="res/icon/ios/ipad_app76x76@2x.png" height="152" width="152" />
		<icon platform="ios" src="res/icon/ios/ipad_pro_app83.5x83.5@2x.png" height="167" width="167" />
		<icon platform="ios" src="res/icon/ios/iphone_app60x60@3x.png" height="180" width="180" />
		<icon platform="ios" src="res/icon/ios/ios_marketing1024x1024.png" height="1024" width="1024" />
		<allow-intent href="itms:*" />
		<allow-intent href="itms-apps:*" />
		<plugin name="cordova-plugin-wkwebview-file-xhr" spec="2.1.3" />
	</platform>
	<allow-navigation href="https://tripseasonmap.com/*" />
	<allow-intent href="mailto:*" />
	<access origin="https://tripseasonmap.com" />
	<access origin="wss://tripseasonmap.com" />
</widget>
