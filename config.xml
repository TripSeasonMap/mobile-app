<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tripseasonmap" version="0.8" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Trip Season Map</name>
    <description>Trip Season Map shows you the best season to travel! And make plan your next adventure just that little bit easier.</description>
    <author email="go@tripseasonmap.com" href="https://tripseasonmap.com">Epexa</author>
    <content src="index.html" />
    <preference name="android-targetSdkVersion" value="28" />
    <preference name="BackgroundColor" value="white" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="phonegap-version" value="cli-9.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.4" />
    <platform name="android">
        <icon density="mdpi" src="res/icon/android/mipmap-hdpi.png" />
        <icon density="hdpi" src="res/icon/android/mipmap-mdpi.png" />
        <icon density="xhdpi" src="res/icon/android/mipmap-xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/mipmap-xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icon/android/mipmap-xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <icon platform="ios" src="res/icon/ios/20.png" height="20" width="20" />
        <icon platform="ios" src="res/icon/ios/29.png" height="29" width="29" />
        <icon platform="ios" src="res/icon/ios/40.png" height="40" width="40" />
        <icon platform="ios" src="res/icon/ios/48.png" height="48" width="48" />
        <icon platform="ios" src="res/icon/ios/50.png" height="50" width="50" />
